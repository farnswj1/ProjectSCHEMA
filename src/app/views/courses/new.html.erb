<h1><font size="50">New Course</font></h1>

<% if current_user.is_admin %>

    <%= render 'form', course: @course %>

    <%= link_to 'Back', courses_path, class: "red-button", 
    data: {confirm: 'Are you sure you want to leave the page? You will lose any unsaved data!'} %>

<% else %>
    <div style = "position: relative; top: 100px">
        <h1>You don't have administrative privileges to make a new course!</h1>
        <br>
        <%= link_to "Go to Dashboard", home_dashboard_path, :class => "blue-button-long"  %>
    </div>
<% end %>